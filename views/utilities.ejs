<title>
    <%= title %>
</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<%- include('header'); -%>
    <section class="featured">
        <div class="content-wrapper">
            <h1 id="myHeader">
                <%= title %>
            </h1>
        </div>
    </section>
    <hr>

    <p>Welcome to <%= title %>
    </p>
    <form action="/utilities/" method="POST">
        <div class="form-group">
            <input type="text" id="txttown" name="txttown" class="form-control" style="
        font-weight: bold;
        color: darkgreen; 
        font-family: 'Times New Roman', Times, serif;
      " style="text-transform: uppercase" placeholder="City name" value="" />
            <button type="submit" class="btn btn-success">
                Search
            </button>
        </div>
        <br>
        <hr>
        <table class="table table-hover" style="border:2px ;margin-left:auto;margin-right:auto; width:60%">
            <thead>
                <tr>
                    <th>City name</th>
                    <th>Min temp</th>
                    <th>Max temp</th>
                    <th>Actual temp</th>
                    <th>Weather description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-transform: capitalize" ;>
                        <%= city %>
                    </td>
                    <td>
                        <%= mintemp %>
                    </td>
                    <td>
                        <%= maxtemp %>
                    </td>
                    <td>
                        <%= actualtemp %>
                    </td>
                    <td style="text-transform: capitalize">
                        <%= description %>
                    </td>
                </tr>
            </tbody>
        </table>


    </form>