<title>
    <%= title %>
</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<%- include('header'); -%>
    <section class="featured">
        <div class="content-wrapper">
            <h1 id="myHeader">
                <%= title %>
            </h1>
        </div>
    </section>
    <hr>

    <form action="/utilities/" method="POST">
        <div class="form-group">
            <table style="width: 60%; margin-left: auto;margin-right: auto;">
                <tr>
                    <td>
                        <input type="text" id="txttown" name="txttown" class="form-control" style="
                        font-weight: bold;
                        color: darkgreen; 
                        font-family: 'Times New Roman', Times, serif;
                      " style="text-transform: uppercase" placeholder="City name" value="" />
                    </td>
                    <td>
                        <button type="submit" class="btn btn-success">
                            Search
                        </button>
                    </td>
                </tr>
            </table>

        </div>
        <br>
        <hr>
        <% if(actualtemp!="City was not found" ){ %>
            <table class="table table-hover" style="border:2px ;margin-left:auto;margin-right:auto; width:60%">
                <thead>
                    <tr>
                        <th>City name</th>
                        <th>Min temp</th>
                        <th>Max temp</th>
                        <th>Actual temp</th>
                        <th>Weather description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-transform: capitalize" ;>
                            <%= city %>
                        </td>
                        <td>
                            <%= mintemp %>
                        </td>
                        <td>
                            <%= maxtemp %>
                        </td>
                        <td>
                            <%= actualtemp %>
                        </td>
                        <td style="text-transform: capitalize">
                            <%= description %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <% } else { %>
                <h3 style="font:bold;color: darkred;font-family: monospace;">No records found</h3>
                <% } %>


    </form>