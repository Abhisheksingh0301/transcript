<title>
    <%= title %>
</title>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
<script src="https://kit.fontawesome.com/00d76a4bef.js" crossorigin="anonymous"></script>
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>

<%- include('header'); -%>
    <section class="featured">
        <div class="content-wrapper">
            <h1 id="myHeader">
                <%= title %>
            </h1>
        </div>
    </section>
    <hr>
    <p>Welcome to <%= title %>
    </p>
    <% if(transcripts.length>0){ %>
        <table class="table table-hover" style="border:1px solid black;margin-left:auto;margin-right:auto;">
            <tr>
                <th>Name</th>
                <th>Dept</th>
                <th>Session</th>
                <th>Roll</th>
                <th>Registration no</th>
                <th>Contact no</th>
                <th>Entry date</th>
                <th>Verification Date</th>
                <th>Action</th>
            </tr>
            <tbody id="myTable">
                <tr>
                    <% for (var i=0; i<transcripts.length; i++){ %>
                        <td>
                            <%= transcripts[i].passdata.name %>
                        </td>
                        <td>
                            <%= transcripts[i].passdata.deptcode %>
                        </td>
                        <td>
                            <%= transcripts[i].passdata.sess %>
                        </td>
                        <td>
                            <%= transcripts[i].passdata.roll %>
                        </td>
                        <td>
                            <%= transcripts[i].passdata.regno %>
                        </td>
                        <td>
                            <%= transcripts[i].contactno %>
                        </td>
                        <td>
                            <%= moment(transcripts[i].entrydt).format( 'DD-MMM-YYYY' ) %>
                        </td>
                        <td>
                            <%= moment(transcripts[i].verificationdate).format( 'DD-MMM-YYYY' ) %>
                        </td>
                        <td>
                            <a href='/dispatch/<%= transcripts[i]._id %>'>Dispatch</a>
                        </td>
                </tr>
                <% } %>

            </tbody>
        </table>
        <div class="row  container-fluid">
            <% for (var i=0; i<transcripts.length; i++){ %>
                <div class=" mx-2 my-2 card border-dark mb-3" style="width: 20rem; ">
                    <img src="https://webstockreview.net/images/award-clipart-transparent-background-4.png"
                        class="card-img-top px-2" alt="No image" style="width:35%; text-align: center;margin: auto;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-family:'Times New Roman', Times, serif; text-align:center; 
                            background-color:aqua; font-weight: bold;">
                            <%= transcripts[i].passdata.name %> <br>
                                <i class="fa fa-mobile" aria-hidden="true"></i> : <%= transcripts[i].contactno %>
                        </h5>
                        <p class="card-text" style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: blue;">
                            <%= transcripts[i].passdata.regno %> (<%= transcripts[i].passdata.deptcode %>) <br>
                                    Entry date : <%= moment(transcripts[i].entrydt).format( 'DD-MMM-YYYY' ) %> <br>
                                        Verification date : <%=
                                            moment(transcripts[i].verificationdate).format( 'DD-MMM-YYYY' ) %>
                        </p>
                        <div style="float:right">
                            <a href="/dispatch/<%= transcripts[i]._id %>" class="btn btn-primary">Dispatch</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
        <% } else { %>
            No records found
            <% } %>
                <%- include('footer'); -%>